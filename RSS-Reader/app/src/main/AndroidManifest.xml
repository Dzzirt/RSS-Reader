<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.app.dzzirt.rss_reader">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.omega_r.dzzirt.rss_reader.RssReaderApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">


        <activity android:name="com.omega_r.dzzirt.rss_reader.activity.MainActivity"
                  android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.omega_r.dzzirt.rss_reader.activity.ItemInfoActivity"/>
        <activity android:name="com.omega_r.dzzirt.rss_reader.activity.SettingsActivity"/>
        <activity android:name="com.omega_r.dzzirt.rss_reader.activity.WebViewActivity"/>
    </application>

</manifest>
